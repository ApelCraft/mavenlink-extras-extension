{
    "name": "mavenlink-extras",
    "version": "0.0.5",
    "manifest_version": 2,
    "description": "Adds additional functionality to app.mavenlink.com",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "mavenlink-extras",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://app.mavenlink.com/*",
                "https://app.mavenlink.com/*"
            ],
            "css": [
                "styles/main.css"
            ],
            "js": [
                "bower_components/jquery/src/jquery.js",
                "scripts/contentscript.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ]
}